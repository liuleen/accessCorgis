
<%= simple_form_for(@corgi) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :size %>
    <%= f.input :price %>
    <%= f.input :image %>
    <%= f.input :color %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
